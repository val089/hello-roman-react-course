{
  "extends": ["react-app", "react-app/jest", "plugin:react-hooks/recommended","plugin:prettier/recommended", "prettier"],
  "plugins": ["prettier", "react-hooks"],
  "rules": {
    "prettier/prettier": ["warn", {
      "singleQuote": true,
      "printWidth": 120,
      "endOfLine": "auto",
      "trailingComma": "es5",
      "useTabs": false
    }],
    "no-console": 0,
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parser": "babel-eslint"
}
